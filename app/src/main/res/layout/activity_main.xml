<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.nlopezjimenez.juegonumeros.MainActivity">
        android:weightSum="1">
        android:orientation="vertical"

        android:gravity="center"
        android:background="#a6a6a6"
        android:baselineAligned="false"
        android:weightSum="1">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="8"
            android:columnCount="5"
            android:id="@+id/gridLayout2"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:layout_column="1"
                android:layout_row="2"
                android:id="@+id/button0"
                android:text="0"
                android:onClick="evento0"/>
            <Button
                android:layout_column="1"
                android:layout_columnSpan="4"
                android:layout_row="0"
                android:id="@+id/Comenzar"
                android:text="Comenzar"
                android:onClick="eventoComenzar"
                android:layout_width="260dp"
                android:enabled="true"
                android:focusable="false"
                />
            <Space
                android:layout_row="1"
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_columnSpan="5"/>
            <Button
                android:layout_column="2"
                android:layout_row="2"
                android:id="@+id/button1"
                android:text="1"
                android:onClick="evento1"/>
            <Button
                android:layout_column="3"
                android:layout_row="2"
                android:id="@+id/button2"
                android:text="2"
                android:onClick="evento2"/>
            <Space
                android:layout_row="3"
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_columnSpan="5"/>
            <Button
                android:layout_column="1"
                android:layout_row="4"
                android:id="@+id/button3"
                android:text="3"
                android:onClick="evento3"/>
            <Button
                android:layout_column="2"
                android:layout_row="4"
                android:id="@+id/button4"
                android:text="4"
                android:onClick="evento4"/>
            <Button
                android:layout_column="3"
                android:layout_row="4"
                android:id="@+id/button5"
                android:text="5"
                android:onClick="evento5"/>
            <Space
                android:layout_row="5"
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_columnSpan="5"
                />
            <Button
                android:layout_column="1"
                android:layout_row="6"
                android:id="@+id/button6"
                android:text="6"
                android:onClick="evento6"/>
            <Button
                android:layout_column="2"
                android:layout_row="6"
                android:id="@+id/button7"
                android:text="7"
                android:onClick="evento7"/>
            <Button
                android:layout_column="3"
                android:layout_row="6"
                android:id="@+id/button8"
                android:text="8"
                android:onClick="evento8"/>
            <Space
                android:layout_row="7"
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_columnSpan="5"
                />





        </GridLayout>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/correcion"
            android:text="Corregir"
            android:onClick="eventoComprobar"
            android:layout_marginRight="74dp"
            android:layout_marginEnd="74dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/gridLayout2"
            android:layout_alignEnd="@+id/gridLayout2"
            android:layout_marginBottom="26dp" />
    </RelativeLayout>